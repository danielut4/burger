<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Eat-Da-Burger</h1>
  </div>
</div>
<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h2>Add and Devour your Favorite Burgers!</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
            {{/unless}}
            {{/each}}
          </div>
          <div class="container">
            <div class="col">
              <h2>Devoured Burgers</h2>
              {{#each burgers}}
              {{#if this.devoured}}
              <div class='burgerEaten'>
                <div>
                  {{this.burger_name}}
                </div>
              </div>
              {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <h2>Add A Burger </h2>

        <div class="row">
          <div class="col">
            <form action="/burgers" method="POST">
              <input type="text" id="name" name="burger_name" placeholder="Burger">
              <button type="submit" class="addBurgerButton">Add The Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
